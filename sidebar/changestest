<script>
const impermeabilizacaoData = {
    labels: ['Item 1','Item 2','Item 3','Item 4'],
    datasets: [{ label: 'S칠rie 1', data: [1,5,8,12], backgroundColor: '#9be6e0' }]
};

const poluicaoData = {
    labels: ['2020','2021','2022','2023','2024'],
